{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Litan",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#storage"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.litan",
					"match": "\\b(return|var)\\b"
				},
				{
					"name": "keyword.conditional.litan",
					"match": "\\b(if|else|case|conditional|switch)\\b"
				},

				{
					"name" : "keyword.loops.litan",
					"match" : "\\b(while|for)\\b"
				}
			]
		},
		"storage" : {
			"patterns" : [
				{
					"name": "storage.function.litan",
					"match": "\\b(function)\\b"
				},
				{
					"name": "storage.lambda.litan",
					"match": "\\b(lambda)\\b"
				},
				{
					"name" : "storage.namespace.litan",
					"match" : "\\b(namespace)\\b"
				}
			]
		},
		"comments" : {
			"patterns": [
				{
					"name": "comment.line",
					"begin": "//",
					"end": "\\n"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"name" : "constant.language",
					"match": "\\b(null|true|false)\\b"
				},
				{
					"name" : "constant.numeric.dec",
					"match": "\\b[-]?[0-9]+(\\.[0-9]+)?\\b"
				},
				{
					"name" : "constant.numeric.bin",
					"match": "\\b0b(0|1)*\\b"
				},
				{
					"name" : "constant.numeric.hex",
					"match": "\\b0x([0-9]|[a-f])*\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.litan",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.litan",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ltn"
}